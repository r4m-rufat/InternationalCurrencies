<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/top3_currencies_box">

        <ImageView
            android:id="@+id/flagUSA"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/usa_flag"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/flagUSA"
            android:id="@+id/txtUSD"
            android:text="USD"
            android:layout_marginTop="7dp"/>

        <TextView
            android:id="@+id/txtAmericanDollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/flagUSA"
            android:layout_below="@+id/txtUSD"
            android:layout_marginTop="5dp"
            android:text="American Dollar"/>

        <TextView
            android:id="@+id/symbolDollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="$"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:textColor="#3FDF04"/>

        <TextView
            android:id="@+id/dollarRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="1"
            android:layout_toLeftOf="@+id/symbolDollar"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

</RelativeLayout>